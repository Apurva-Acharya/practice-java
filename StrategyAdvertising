public class StrategyAdvertising {

	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		int noOfDays= sc.nextInt();
		System.out.println(stratAdv(noOfDays));
	}
	public static int stratAdv(int n) {
		int totalLikes=0;
		int totalPeople=5;
		int i=1;
		while(i<=n) {
			totalLikes= totalLikes+ (totalPeople/2);
			totalPeople= (totalPeople /2)*3;
			i++;
		}
		return totalLikes;
	}

}
